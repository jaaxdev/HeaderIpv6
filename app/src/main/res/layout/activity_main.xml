<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context="com.jaaziel.irc.headeripv6.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DS (Control de tráfico)"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Etiqueta de flujo"
                android:gravity="center"
                android:enabled="false"
                android:focusable="false"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/tag_flujo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="20 bits"
                android:enabled="false"
                android:focusable="false"
                android:inputType="number"
                android:maxLength="20"
                android:digits="10"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitud de carga útil"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/carga_util"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:visibility="invisible"
                android:digits="10"
                android:inputType="number"
                android:hint="16 bits"
                android:maxLength="16"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siguiente cabecera"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/sig_cabecera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="8 bits"
                android:inputType="number"
                android:maxLength="8"
                android:enabled="false"
                android:focusable="false"
                android:digits="10"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Límite de saltos"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/lim_saltos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:digits="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="number"
                android:hint="8 bits"
                android:maxLength="8"/>

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección fuente"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/dir_fuente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="128 bits (Introduzca en hexadecimal)"
                android:maxLength="39"
                android:inputType="text"
                android:enabled="false"
                android:focusable="false"
                android:digits="1234567890abcdefABCDEF"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección destino"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/dir_destino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="128 bits (Introduzca en hexadecimal)"
                android:maxLength="39"
                android:enabled="false"
                android:focusable="false"
                android:digits="1234567890abcdefABCDEF" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos"
                android:gravity="center"
                android:textColor="@color/negro"/>

            <EditText
                android:id="@+id/datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Introduzca datos"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/boton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver cabecera completa" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
